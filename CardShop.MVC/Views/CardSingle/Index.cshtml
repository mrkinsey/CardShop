@model IEnumerable<CardSingleListItem>


@{
    ViewData["Title"]="Card Single Listing";
}

    <h1 style="text-align: center;">Card Singles</h1>
@if(Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th class="col-md-2">Id</th>
            <th class="col-md-2">Card Name</th>
            <th class="col-md-2">Parallel</th>
            <th class="col-md-2">Year</th>
            <th class="col-md-1">Valuation</th>
            <th class="col-md-1">Profit/Loss</th>
            <th class="col-md-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cardSingle in Model)
        {
            <tr>
                <td>@cardSingle.Id</td>
                <td>@cardSingle.CardName</td>
                <td>@cardSingle.Parallel</td>
                <td>@cardSingle.Year</td>
                <td>$ @cardSingle.GrandTotal</td>
                <td>$ @cardSingle.ProfitLossTotal</td>
                <td style="text-align: center;">
                    @Html.ActionLink("Edit","Edit","CardSingle", new {id=cardSingle.Id}) |
                    @Html.ActionLink("Details","Details","CardSingle", new {id=cardSingle.Id}) |
                    @Html.ActionLink("Delete","Delete","CardSingle", new {id=cardSingle.Id}) 
                </td>
            </tr>
        }
            <tr>
                <td>Total Valuation</td>
                <td></td>
                <td></td>
                <td></td>
                <td>$ @Model.Sum(c=>c.GrandTotal)</td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>Total Profit / Loss</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>$ @Model.Sum(c=>c.ProfitLossTotal)</td>
                <td></td>
            </tr>
    </tbody>
</table>
} else {
    <p class="text-danger">Sorry, there are no singles in the database.</p>
}