@model CardSingleDetails

@{
    ViewData["Title"] = Model.CardName;
}

<div class="detailsContainer">
    <div>
    <h1 style="text-align: center;">@Model.Year @Model.CardName - @Model.Parallel</h1>
    <h4 style="text-align: center;">Card Details</h4>
    <hr />
    </div>
    <div class="detailsData">
        <p class="detailsTextBox"><b>Id: </b>@Model.Id</p>
        <p class="detailsTextBox"><b>Card Set Id: </b>@Model.CardSetId</p>
        <p class="detailsTextBox"><b>Card Name: </b>@Model.CardName</p>
        <p class="detailsTextBox"><b>Parallel: </b>@Model.Parallel</p>
        <p class="detailsTextBox"><b>Year: </b>@Model.Year</p>
        <p class="detailsTextBox"><b>Quantity Purchased: </b>@Model.QuantityPurchased</p>
        <p class="detailsTextBox"><b>Quantity Available: </b>@Model.QuantityAvailable</p>
        <p class="detailsTextBox"><b>Value: </b>$@Model.Value</p>
        <p class="detailsTextBox"><b>Purchase Price: </b>$@Model.PurchasePrice</p>
        <p class="detailsTextBox"><b>Sales Price: </b>$@Model.SalePrice</p>
        <p class="detailsTextBox"><b>Profit / Loss: </b>$@Model.ProfitLossTotal</p>
        <p class="detailsTextBox"><b>Comments: </b>@Model.Comments</p>
    </div>
    <hr /> 
    <div class="detailsFooter">
        <p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@Model.Id>Edit</a>  
        <a class="btn btn-primary" asp-action="Index">Back To List</a>
        </p>
    </div>
</div>