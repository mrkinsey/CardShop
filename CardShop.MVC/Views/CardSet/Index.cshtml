@model IEnumerable<CardSetListItem>


@{
    ViewData["Title"] = "Card Set Listing";
}

    <h1 style="text-align: center;">Card Sets</h1>

@if (Model.Count() > 0)
{
            <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-md-2">Id</th>
                    <th class="col-md-2">Brand Name</th>
                    <th class="col-md-1">Set Name</th>
                    <th class="col-md-1">Year</th>
                    <th class="col-md-2">Format</th>
                    <th class="col-md-1">Valuation</th>
                    <th class="col-md-1">Profit / Loss</th>
                    <th class="col-md-2"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var cardSet in Model)
            {
                        <tr>
                            <td>@cardSet.Id</td>
                            <td>@cardSet.BrandName</td>
                            <td>@cardSet.SetName</td>
                            <td>@cardSet.Year</td>
                            <td>@cardSet.Format</td>
                            <td>$ @cardSet.GrandTotal</td>
                            <td>$ @cardSet.ProfitLossTotal</td>
                            <td style="text-align: center;">
                        @Html.ActionLink("Edit","Edit","CardSet", new {id=cardSet.Id}) |
                        @Html.ActionLink("Details","Details","CardSet", new {id=cardSet.Id}) |
                        @Html.ActionLink("Delete","Delete","CardSet", new {id=cardSet.Id}) 
                            </td>
                        </tr>
            }
                <tr>
                        <td>Total Valuation</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>$ @Model.Sum(c=>c.GrandTotal)</td>
                        <td></td>
                        <td></td>
                </tr>
                <tr>
                        <td>Total Profit or Loss</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>$ @Model.Sum(c=>c.ProfitLossTotal)</td>
                        <td></td>
                </tr>
            </tbody>
        </table>
}
else
{
            <p class="text-danger">Sorry, There are no card sets.</p>
}