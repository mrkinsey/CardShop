@model IEnumerable<CategoryListItem>


@{
    ViewData["Title"]="Category Listing";
}
    <h1 style="text-align: center;">Categories</h1>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th class="col-md-2">Id</th>
                <th class="col-md-8">Category</th>
                <th class="col-md-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.CategoryName</td>
                    <td style="text-align: center;">
                        @Html.ActionLink("Edit","Edit","Category", new {id=category.Id}) |
                        @Html.ActionLink("Details","Details","Category", new {id=category.Id}) |
                        @Html.ActionLink("Delete","Delete","Category", new {id=category.Id}) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
    } else {
        <p class="text-danger">Sorry, There are no categories.</p>
    }
